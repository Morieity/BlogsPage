@page "/articles/create"
@inject ArticleService ArticleService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="bi bi-plus-circle"></i>
                    新建文章
                </h4>
            </div>
            <div class="card-body">
                <EditForm Model="@createArticleDto" OnValidSubmit="@HandleValidSubmit" FormName="CreateArticleForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="alert alert-danger" />

                    <div class="mb-3">
                        <label for="title" class="form-label">标题 <span class="text-danger">*</span></label>
                        <InputText id="title" class="form-control" @bind-Value="createArticleDto.Title" placeholder="请输入文章标题" />
                        <ValidationMessage For="@(() => createArticleDto.Title)" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label">内容</label>
                        <InputTextArea id="content" class="form-control" @bind-Value="createArticleDto.Content" 
                                     rows="10" placeholder="请输入文章内容..." />
                        <ValidationMessage For="@(() => createArticleDto.Content)" class="text-danger" />
                        <div class="form-text">支持换行和基本格式。</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" @onclick="GoBack">
                            <i class="bi bi-arrow-left"></i>
                            返回列表
                        </button>
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <text>创建中</text>
                            }
                            else
                            {
                                <i class="bi bi-save"></i>
                                <span>创建文章</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateArticleDto createArticleDto = new();
    private bool isSubmitting = false;

    private async Task HandleValidSubmit()
    {
        try
        {
            isSubmitting = true;
            var createdArticle = await ArticleService.CreateArticleAsync(createArticleDto);
            
            if (createdArticle != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "文章创建成功！");
                Navigation.NavigateTo("/articles");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "创建失败，请稍后重试。");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"创建文章时出错: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "创建失败，请稍后重试。");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/articles");
    }
}
